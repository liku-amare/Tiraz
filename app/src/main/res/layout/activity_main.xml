<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:contentDescription="@string/logo_title"
            app:srcCompat="@drawable/logo2_no_back" />

        <SearchView
            android:id="@+id/search_bar_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:tooltipText="Please Enter your Search" />

        <ImageButton
            android:id="@+id/settings_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/baseline_settings_24"/>

    </LinearLayout>

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearlayout">

        <LinearLayout
            android:id="@+id/tiraz1_home_button"
            android:layout_width="143dp"
            android:layout_height="194dp"
            android:layout_margin="5dp"
            android:background="@drawable/shape"
            android:theme="@style/ErrorStyle"
            android:orientation="vertical"
            app:layout_column="0"
            app:layout_row="0">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="50dp"
                android:fontFamily="@font/niyala"
                android:text="ጥራዝ አንድ"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/tiraz1_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/niyala"
                android:text="1999 ዓ.ም."
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tiraz1_hymns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/niyala"
                android:text="100 መዝሙራት"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tiraz2_home_button"
            android:layout_width="143dp"
            android:layout_height="194dp"
            android:layout_margin="5dp"
            android:background="@drawable/shape"
            android:orientation="vertical"
            android:theme="@style/ErrorStyle"
            app:layout_column="1"
            app:layout_row="0">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="50dp"
                android:fontFamily="@font/niyala"
                android:text="ጥራዝ ሁለት"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/tiraz2_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/niyala"
                android:text="1999 ዓ.ም."
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tiraz2_hymns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/niyala"
                android:text="100 መዝሙራት"
                android:textSize="22sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tiraz3_home_button"
            android:layout_width="143dp"
            android:layout_height="194dp"
            android:layout_margin="5dp"
            android:background="@drawable/shape"
            android:theme="@style/ErrorStyle"
            android:orientation="vertical"
            app:layout_column="0"
            app:layout_row="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="50dp"
                android:fontFamily="@font/niyala"
                android:text="ጥራዝ ሦስት"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/tiraz3_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/niyala"
                android:text="1999 ዓ.ም."
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tiraz3_hymns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/niyala"
                android:text="100 መዝሙራት"
                android:textSize="22sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tiraz4_home_button"
            android:layout_width="143dp"
            android:layout_height="194dp"
            android:layout_margin="5dp"
            android:background="@drawable/shape"
            android:theme="@style/ErrorStyle"
            android:orientation="vertical"
            app:layout_column="1"
            app:layout_row="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="50dp"
                android:fontFamily="@font/niyala"
                android:text="ጥራዝ አራት"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/tiraz4_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/niyala"
                android:text="1999 ዓ.ም."
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tiraz4_hymns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/niyala"
                android:text="100 መዝሙራት"
                android:textSize="22sp" />

        </LinearLayout>

    </androidx.gridlayout.widget.GridLayout>

